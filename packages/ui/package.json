{
    "name": "@harukit/ui",
    "version": "0.0.2",
    "description": "A modern UI component library built with React, TypeScript, and Tailwind CSS",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "styles"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        },
        "./styles/*": "./styles/*"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
        "type-check": "tsc --noEmit",
        "lint": "eslint src --ext .ts,.tsx",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "react": "^18 || ^19",
        "react-dom": "^18 || ^19"
    },
    "keywords": [
        "react",
        "typescript",
        "tailwind",
        "ui",
        "components",
        "design-system"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-tooltip": "^1.0.7",
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.3.1"
    },
    "devDependencies": {
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.0.2",
        "autoprefixer": "^10.4.21",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.8.3"
    }
}