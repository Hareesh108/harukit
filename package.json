{
  "name": "harukit-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "publish": "turbo run publish",
    "demo:dev": "cd packages/cli-demo && npm run dev",
    "demo:build": "cd packages/cli-demo && npm run build",
    "demo:test": "cd packages/cli-demo && npm run test",
    "docs:dev": "cd apps/docs && npm run dev",
    "docs:build": "cd apps/docs && npm run build",
    "docs:start": "cd apps/docs && npm run start"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "typescript": "^5.8.3",
    "@types/node": "^20.10.5"
  },
  "packageManager": "pnpm@8.0.0"
}